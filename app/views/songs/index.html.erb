<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table class="table table-striped able-bordered table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Composer</th>
      <th>Tempo</th>
      <th>Key</th>
      <th>Scale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.composer.name %></td>
        <td><%= song.tempo %></td>
        <td><%= song.key %></td>
        <td><%= song.scale %></td>
        <td><%= link_to 'Show', song, class: "btn btn-primary", class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_song_path(song), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_song_path, class: "btn btn-info" %>
