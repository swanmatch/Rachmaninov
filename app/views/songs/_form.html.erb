<%= simple_form_for(@song) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :composer %>
    <%= f.input :tempo %>
    <%#= f.pretty_inspect %>
    <%= f.input :key, include_blank: false, collection: Song.keys.keys, as: :select %>
    <%= f.input :scale, collection: Song.scales.keys, as: :radio_buttons %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>


