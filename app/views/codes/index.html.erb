<p id="notice"><%= notice %></p>

<h1>Listing Codes</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @codes.each do |code| %>
      <tr>
        <td><%= code.name %></td>
        <td><%= link_to 'Show', code, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_code_path(code), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', code, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="text-center">
  <%= link_to 'New Code', new_code_path, class: "btn btn-info" %>
</div>
