<p id="notice"><%= notice %></p>

<h1>Listing Composers</h1>

<table class="table table-striped able-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @composers.each do |composer| %>
      <tr>
        <td><%= composer.name %></td>
        <td><%= link_to 'Show', composer, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_composer_path(composer), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', composer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Composer', new_composer_path, class: "btn btn-info" %>
